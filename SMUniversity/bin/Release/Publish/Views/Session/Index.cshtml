
@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SMUModels.admin_SMUniversityEntities _Context = new SMUModels.admin_SMUniversityEntities();
}

<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/buttons.dataTables.min.css" rel="stylesheet" />

<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<script src="https://editor.datatables.net/extensions/Editor/js/dataTables.editor.min.js"></script>
@*<script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
<script src="~/Scripts/DataTables/but@*t*@ons.html5.min.js"></script>

<input type="hidden" id="SessionID" />

<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Top header start-->
                <h3 class="ls-top-header"></h3>
                <!--Top header end -->
                <!--Top breadcrumb start -->
                <ol class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a></li>
                    <li class="active"><a href="/Session/Index">المحاضرات</a></li>
                </ol>
                <!--Top breadcrumb start -->
            </div>
        </div>
        <!-- Main Content Element  Start-->

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"></h3>
                    </div>
                    <table id="myDataTable" class="table table-striped table-bordered table-hover display">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>كود المحاضره</th>
                                <th>اسم المحاضره</th>
                                <th>اسم المحاضر</th>
                                <th>السعر الأول</th>
                                <th>السعر الثاني</th>
                                <th>السعر الثالث</th>
                                <th>القاعه</th>
                                <th>من</th>
                                <th>الي</th>
                                <th>النوع</th>
                                <th>تاريخ الإنشاء</th>
                                <th>الأدوات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in _Context.TblSessions.Where(a => a.IsDeleted != true).OrderByDescending(a => a.ID).ToList())
                            {
                                var SessionDetails = _Context.TblSessionDetails.Where(a => a.SessionID == item.ID).FirstOrDefault();
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.SessionCode</td>
                                    <td>@item.Name</td>
                                    <td>@item.TblLecturer.FirstNameAr @item.TblLecturer.SecondNameAr @item.TblLecturer.ThirdNameAr</td>
                                    <td><span class="label label-success">@(item.Type ? SessionDetails.Cost : SessionDetails.Price1) KD</span></td>
                                    <td><span class="label label-success">@(item.Type ? 0 : SessionDetails.Price2) KD</span></td>
                                    <td><span class="label label-success">@(item.Type ? 0 : SessionDetails.Price3) KD</span></td>
                                    <td>@item.TblHall.HallCodeAr</td>
                                    <td>@item.FromDate.ToString("yyyy-MM-dd")</td>
                                    <td>@item.ToDate.ToString("yyyy-MM-dd")</td>
                                    @if (item.Type)
                                    {
                                        <td>محاضره</td>
                                    }
                                    else
                                    {
                                        <td>دوره</td>
                                    }
                                    <td>@item.CreatedDate.ToString("yyyy-MM-dd hh:mm tt")</td>
                                    <td>
                                        <a href="@Url.Action("ViewSessions", "Session", new { SessionID = item.ID })" class="btn btn-xs btn-success" title="عرض المحاضرات" id="btnViewSessions"><i class="fa fa-eye fa-lg"></i></a>
                                        <a href="@Url.Action("Edit", "Session", new { SessionID = item.ID })" class="btn btn-xs btn-success" title="تعديل المحاضره" id="btnEditSessions"><i class="fa fa-pencil-square-o"></i></a>
                                        <a href="javascript:showModal('@item.ID','@item..Name')" class="btn btn-xs btn-danger" id="DeleteSession_@item.ID"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showModal(ID, Name) {
        debugger
        //$('#submitModalRequest').hide();
        //$('.remodal-cancel').text('Close');

        $('#HModalTitle').text('حذف محاضرة ' + Name);
        $('#PModalBody').text('سيتم الحذف فقط اذا كانت المحاضره غير مرتبطه ببيانات خاصه بالتقييمات او المحاضرات المفضله او الإشتراكات');
        $("#DeleteSession_" + ID).attr("href", "#reModalRed");
        $('#SessionID').val(ID);
        clickOnModal(ID);
        return false;
    }

    function clickOnModal(ID) {
        var href = $('#DeleteSession_' + ID).attr('href');
        window.location.href = href; //causes the browser to refresh and load the requested url
        return false;
    }

    $(document).on('confirm', '.remodal', function () {
        debugger
        $.ajax({
            type: "POST",
            url: "/Session/Delete",
            cache: false,
            contentType: "application/json; charset=utf-8",
            data: "{SessionID:'" + $('#SessionID').val() +
                "'}",
            dataType: "json",
            processData: false,
            success: function (response) {
                debugger
                location.reload();
            },
            failure: function (errMsg) {
                alert(errMsg);
            }
        });
    });
</script>