                                                        <option value="@uni.ID">@uni.NameAr</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-3 col-sm-12">
                                                <select class="form-control" id="CollegeID" name="CollegeID" onchange="getMajors()" required>
                                                    <option value="0">اسم الكلية</option>
                                                </select>
                                            </div>
