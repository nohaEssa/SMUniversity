
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SMUModels.admin_SMUniversityEntities _Context = new SMUModels.admin_SMUniversityEntities();
}

<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/buttons.dataTables.min.css" rel="stylesheet" />

<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<script src="https://editor.datatables.net/extensions/Editor/js/dataTables.editor.min.js"></script>
@*<script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
<script src="~/Scripts/DataTables/buttons.html5.min.js"></script>

<input type="hidden" id="CardCatID" />

<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Top header start-->
                <h3 class="ls-top-header"></h3>
                <!--Top header end -->
                <!--Top breadcrumb start -->
                <ol class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a></li>
                    <li class="active"><a href="/CardCategory/Index">فئات الشحن</a></li>
                </ol>
                <!--Top breadcrumb start -->
            </div>
        </div>
        <!-- Main Content Element  Start-->

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"></h3>
                    </div>
                    <table id="myDataTable" class="table table-striped table-bordered table-hover display">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>الفئه</th>
                                <th>السعر</th>
                                <th>كروت الشحن الكليه</th>
                                <th>الكروت التي تم شحنها</th>
                                <th>كروت الشحن المتبقيه</th>
                                <th>تاريخ الإنشاء</th>
                                <th>الأدوات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in _Context.TblCardCategories.ToList())
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Title</td>
                                    <td><span class="label label-success ">@item.Price KD</span></td>
                                    <td>@item.TblChargeCards.Count()</td>
                                    <td>@item.TblChargeCards.Where(a => a.Valid == false).Count()</td>
                                    <td>@item.TblChargeCards.Where(a => a.Valid == true).Count()</td>
                                    <td>@item.CreatedDate.ToString("yyyy-MM-dd hh:mm tt")</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "CardCategory", new { CardCatID = item.ID })" class="btn btn-xs btn-warning" title="تعديل المنطقه" id="btnEditCardCategory"><i class="fa fa-pencil-square-o"></i></a>
                                        @*<a href="@Url.Action("Delete", "CardCategory", new { CardCatID = item.ID })" class="btn btn-xs btn-danger" title="حذف المنطقه" id="btnDeleteCardCategory"><i class="fa fa-minus"></i></a>*@
                                        <a href="@Url.Action("ChargeCardsList", "CardCategory", new { SessionID = item.ID })" class="btn btn-xs btn-success" title="كروت الشحن" id="btnViewSessions"><i class="fa fa-eye fa-lg"></i></a>
                                        <a href="javascript:showModal('@item.ID','@item.Price')" class="btn btn-xs btn-danger" id="DeleteCardCategory_@item.ID"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showModal(ID, Name) {
        debugger
        //$('#submitModalRequest').hide();
        //$('.remodal-cancel').text('Close');

        $('#HModalTitle').text('حذف فئة الكارت ' + Name);
        $('#PModalBody').text('سيتم الحذف فقط اذا كانت فئه الكارت غير مرتبطه ببيانات خاصه بكروت شحن');
        $("#DeleteCardCategory_" + ID).attr("href", "#reModalRed");
        $('#CardCatID').val(ID);
        clickOnModal(ID);
        return false;
    }

    function clickOnModal(ID) {
        var href = $('#DeleteCardCategory_' + ID).attr('href');
        window.location.href = href; //causes the browser to refresh and load the requested url
        return false;
    }

    $(document).on('confirm', '.remodal', function () {
        debugger
        $.ajax({
            type: "POST",
            url: "/CardCategory/Delete",
            cache: false,
            contentType: "application/json; charset=utf-8",
            data: "{CardCatID:'" + $('#CardCatID').val() +
                "'}",
            dataType: "json",
            processData: false,
            success: function (response) {
                debugger
                location.reload();
            },
            failure: function (errMsg) {
                alert(errMsg);
            }
        });
    });
</script>