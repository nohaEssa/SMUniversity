@model SMUModels.TblMajor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Student/Create.js"></script>

<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Top header start-->
                <h3 class="ls-top-header">تعديل تخصص</h3>
                <!--Top header end -->
                <!--Top breadcrumb start -->
                <ol class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a></li>
                    <li><a href="/Major/Index">الرئيسية</a></li>
                    <li class="active"><a href="/Major/Edit">تعديل تخصص</a></li>
                </ol>
                <!--Top breadcrumb start -->
            </div>
        </div>
        <!-- Main Content Element  Start-->

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">تعديل تخصص</h3>
                    </div>
                    <form id="EditMajor" action="/Major/Edit" method="post" class="form-horizontal ls_form" enctype='multipart/form-data'>
                        <input type="hidden" name="MajorID" value="@Model.ID" />
                        <div class="panel-body form_view">
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">اسم التخصص عربي</label>
                                    <div class="col-md-10">
                                        <input type="text"
                                               class="form-control validate[required] text-input"
                                               id="NameAr" name="NameAr" placeholder="ادخل اسم التخصص عربي" value="@Model.NameAr" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">اسم التخصص إنجليزي</label>
                                    <div class="col-md-10">
                                        <input type="text"
                                               class="form-control validate[required] text-input"
                                               id="NameEn" name="NameEn" placeholder="ادخل اسم التخصص إنجليزي" value="@Model.NameEn" required>
                                    </div>
                                </div>
                            </div>

                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">الجامعة</label>
                                    <div class="col-md-10">
                                        <select class="form-control" id="UniversityID" name="UniversityID" onchange="getColleges()" required>
                                            <option value="0">اسم الجامعة</option>
                                            @foreach (var uni in ViewBag.UniversitiesList)
                                            {
                                                if (uni.ID != Model.TblCollege.UniversityID)
                                                {
                                                    <option value="@uni.ID">@uni.NameAr</option>
                                                }
                                                else
                                                {
                                                    <option value="@uni.ID" selected>@uni.NameAr</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">الكلية</label>
                                    <div class="col-md-10">
                                        <select class="form-control" id="CollegeID" name="CollegeID" required>
                                            <option value="0">اسم الكلية</option>
                                            <option value="@Model.CollegeID" selected>@Model.TblCollege.NameAr</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" style=" margin: 20px 30px 40px 50px; ">
                                <button class="submit btn-primary btn" type="submit" name="submit">حفظ</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
