
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SMUModels.admin_SMUniversityEntities _Context = new SMUModels.admin_SMUniversityEntities();
}

<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/buttons.dataTables.min.css" rel="stylesheet" />

<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<script src="https://editor.datatables.net/extensions/Editor/js/dataTables.editor.min.js"></script>
@*<script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>

<input type="hidden" id="ProductID" />

<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Top header start-->
                <h3 class="ls-top-header"></h3>
                <!--Top header end -->
                <!--Top breadcrumb start -->
                <ol class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a></li>
                    <li class="active"><a href="/Product/Index">المنتجات</a></li>
                    @*<li class="active"><a href="/BalanceTransaction/PendedChargeRequest">اضافة تخصص</a></li>*@
                </ol>
                <!--Top breadcrumb start -->
            </div>
        </div>
        <!-- Main Content Element  Start-->

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"></h3>
                    </div>
                    <table id="myDataTable" class="table table-striped table-bordered table-hover display">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>QRCode</th>
                                <th>الصورة</th>
                                <th>اسم المنتج عربي</th>
                                <th>اسم المنتج انجليزي</th>
                                <th>الوصف</th>
                                <th>السعر</th>
                                <th>تاريخ الإنشاء</th>
                                <th>الأدوات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in _Context.TblProducts.Where(a => a.IsDeleted != true).OrderByDescending(a => a.ID).ToList())
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>
                                        <img src=@("http://smuapitest.smartmindkw.com/"+item.QRCode) width='107' height='75'>
                                    </td>
                                    <td>
                                        <img src=@("http://smuapitest.smartmindkw.com/"+item.Picture) width='107' height='75'>
                                    </td>
                                    <td>@item.NameAr</td>
                                    <td>@item.NameEn</td>
                                    <td>@item.DescriptionAr</td>
                                    <td><span class="label label-success">@item.Cost KD</span></td>
                                    <td>@item.CreatedDate.ToString("yyyy-MM-dd hh:mm tt")</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Product", new { ProductID = item.ID })" class="btn btn-xs btn-warning" title="تعديل المنتج" id="btnEditProduct"><i class="fa fa-pencil-square-o"></i></a>
                                        @*<a href="@Url.Action("Delete", "Product", new { ProductID = item.ID })" class="btn btn-xs btn-danger" title="حذف المنتج" id="btnDeleteProduct"><i class="fa fa-minus"></i></a>*@
                                        <a href="javascript:showModal('@item.ID','@item.NameAr')" class="btn btn-xs btn-danger" id="DeleteProduct_@item.ID"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showModal(ID) {
        debugger
        //$('#submitModalRequest').hide();
        //$('.remodal-cancel').text('Close');

        $('#HModalTitle').text('حذف سؤال مساعده');
        $('#PModalBody').text('هل انت متأكد من حذف سؤال المساعده وتعليقات الطلبه الخاصه به');
        $("#DeleteProduct_" + ID).attr("href", "#reModalRed");
        $('#ProductID').val(ID);
        clickOnModal(ID);
        return false;
    }

    function clickOnModal(ID) {
        var href = $('#DeleteProduct_' + ID).attr('href');
        window.location.href = href; //causes the browser to refresh and load the requested url
        return false;
    }


    $(document).on('confirm', '.remodal', function () {
        debugger
        $.ajax({
            type: "POST",
            url: "/Product/Delete",
            cache: false,
            contentType: "application/json; charset=utf-8",
            data: "{ProductID:'" + $('#ProductID').val() +
                "'}",
            dataType: "json",
            processData: false,
            success: function (response) {
                debugger
                location.reload();
            },
            failure: function (errMsg) {
                alert(errMsg);
            }
        });
    });
</script>