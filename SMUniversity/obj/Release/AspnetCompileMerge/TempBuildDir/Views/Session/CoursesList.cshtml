<style>
    /* padding-bottom and top for image */
    .mfp-no-margins img.mfp-img {
        padding: 0;
    }
    /* position of shadow behind the image */
    .mfp-no-margins .mfp-figure:after {
        top: 0;
        bottom: 0;
    }
    /* padding for main container */
    .mfp-no-margins .mfp-container {
        padding: 0;
    }
</style>


<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Top header start-->
                <h3 class="ls-top-header"></h3>
                <!--Top header end -->
                <!--Top breadcrumb start -->
                <ol class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a></li>
                    <li class="active"><a href="/Session/Index">المحاضرات</a></li>
                </ol>
                <!--Top breadcrumb start -->
            </div>
        </div>
        <!-- Main Content Element  Start-->

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"></h3>
                    </div>
                    <table id="myDataTable" class="table table-striped table-bordered table-hover display">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>QRCode</th>
                                <th>الصوره</th>
                                <th>كود الدوره</th>
                                <th>اسم الدوره</th>
                                <th>اسم المحاضر</th>
                                <th>سعر الدوره</th>
                                <th>سعر الحصه</th>
                                <th>القاعه</th>
                                <th>من</th>
                                <th>الي</th>
                                <th>تاريخ الإنشاء</th>
                                <th>الأدوات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in _Context.TblSessions.Where(a => a.Type == false && a.IsDeleted != true).OrderByDescending(a => a.ID).ToList())
                            {
                                var SessionDetails = _Context.TblSessionDetails.Where(a => a.SessionID == item.ID).FirstOrDefault();
                                string Picture = "http://smuapitest.smartmindkw.com" + item.Picture;
                                string QRCode = "http://smuapitest.smartmindkw.com" + SessionDetails.QRCode;
                            <tr>
                                <td>@item.ID</td>
                                <td><img src='@QRCode' width='107' height='75'></td>
                                @*<td><a class='image-popup-no-margins' href='@QRCode'><img src='@QRCode' width='107' height='75'></a></td>*@
                                <td><img src='@Picture' width='107' height='75'></td>
                                @*<td><a class='image-popup-no-margins' href='@Picture'><img src='@Picture' width='107' height='75'></a></td>*@
                                <td>@item.SessionCode</td>
                                <td>@item.Name</td>
                                <td>@item.TblLecturer.FirstNameAr @item.TblLecturer.SecondNameAr @item.TblLecturer.ThirdNameAr</td>
                                <td><span class="label label-success">@SessionDetails.Cost KD</span></td>
                                <td><span class="label label-success">@SessionDetails.SessionPrice KD</span></td>
                                <td>@item.TblHall.HallCodeAr</td>
                                <td>@item.FromDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.ToDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.CreatedDate.ToString("yyyy-MM-dd hh:mm tt")</td>
                                <td>
                                    @*<a href="@Url.Action("ViewSessions", "Session", new { SessionID = item.ID })" class="btn btn-xs btn-success" title="عرض المحاضرات" id="btnViewSessions"><i class="fa fa-eye fa-lg"></i></a>*@
                                    <a href="@Url.Action("Edit", "Session", new { SessionID = item.ID })" class="btn btn-xs btn-success" title="تعديل المحاضره" id="btnEditSessions"><i class="fa fa-pencil-square-o"></i></a>
                                    <a href="@Url.Action("ViewSessions", "Session", new { SessionID = item.ID })" class="btn btn-xs btn-success" title="عرض المحاضرات" id="btnViewSessions"><i class="fa fa-eye fa-lg"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    @*<a class="image-popup-vertical-fit" href="http://farm9.staticflickr.com/8241/8589392310_7b6127e243_b.jpg" title="Caption. Can be aligned to any side and contain any HTML.">
                        <img src="http://farm9.staticflickr.com/8241/8589392310_7b6127e243_s.jpg" width="75" height="75">
                    </a>
                    <a class="image-popup-fit-width" href="http://farm9.staticflickr.com/8379/8588290361_ecf8c27021_b.jpg" title="This image fits only horizontally.">
                        <img src="http://farm9.staticflickr.com/8379/8588290361_ecf8c27021_s.jpg" width="75" height="75">
                    </a>
                    <a class="image-popup-no-margins" href="http://farm4.staticflickr.com/3721/9207329484_ba28755ec4_o.jpg">
                        <img src="http://farm4.staticflickr.com/3721/9207329484_ba28755ec4_o.jpg" width="107" height="75">
                    </a>*@
                </div>
            </div>
        </div>
    </div>
</div>

