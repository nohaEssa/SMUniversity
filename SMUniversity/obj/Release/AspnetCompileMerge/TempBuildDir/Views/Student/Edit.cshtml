@model SMUModels.TblStudent

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Student/Create.js"></script>
<script src="~/Scripts/Student/Edit.js"></script>

<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Top header start-->
                <h3 class="ls-top-header">تعديل بيانات طالب</h3>
                <!--Top header end -->
                <!--Top breadcrumb start -->
                <ol class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a></li>
                    <li><a href="/Student/Index">الرئيسية</a></li>
                    <li a href="/Student/Edit?StudentID=@Model.ID" class="active">تعديل بيانات طالب</li>
                </ol>
                <!--Top breadcrumb start -->
            </div>
        </div>
        <!-- Main Content Element  Start-->
        <form id="EditStudent" action="/Student/Edit" method="post" class="form-horizontal ls_form" enctype='multipart/form-data'>
            <input type="hidden" name="StudentID" value="@Model.ID" />
            <input type="hidden" value="@ViewBag.Gender" id="Gender" />
            @*<input type="hidden" value="@ViewBag.StudentType" id="StudentType" />*@
            <input type="hidden" value="@Model.DateOfBirth.ToString("dd/MM/yyyy")" id="DOB" />
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">تعديل بيانات طالب</h3>
                        </div>
                        <div class="panel-body form_view">

                            <div class="row ls_divider"></div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">الاسم:* </label>
                                    <div class="row">
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="FirstName" placeholder="الاسم الاول" class="form-control ls-group-input" value="@Model.FirstName" required>
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="SecondName" placeholder="الاسم الثاني" class="form-control ls-group-input" value="@Model.SecondName" required>
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="ThirdName" placeholder="الاسم الاخير" class="form-control ls-group-input" value="@Model.ThirdName" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">الاسم انجليزي:* </label>
                                    <div class="row">
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="FirstNameEn" placeholder="الاسم الاول انجليزي" class="form-control ls-group-input" value="@Model.FirstNameEn">
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="SecondNameEn" placeholder="الاسم الثاني انجليزي" class="form-control ls-group-input" value="@Model.SecondNameEn">
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="ThirdNameEn" placeholder="الاسم الاخير انجليزي" class="form-control ls-group-input" value="@Model.ThirdNameEn">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">رقم الهاتف:* </label>
                                    <div class="col-md-10">
                                        <input value="@Model.PhoneNumber"
                                               class="validate[required,custom[phone]] form-control"
                                               type="tel" name="PhoneNumber" id="phoneNo1" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">الايميل:* </label>
                                    <div class="col-md-10">
                                        <input placeholder="someone@mail.com" value="@Model.Email"
                                               class="validate[required,custom[email]] form-control"
                                               type="text" name="Email" id="email1" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">تاريخ الميلاد </label>
                                    <div class="col-md-10">
                                        <input class="form-control datePickerOnly" type="text" name="DateOfBirth" value="@Model.DateOfBirth" required />
                                        <span class="help_text">سنة/شهر/يوم</span>
                                    </div>

                                </div>
                            </div>

                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">النوع </label>
                                    <div class="col-lg-5">
                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="Gender" id="Male" value="true" /> ذكر
                                            </label>
                                        </div>
                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="Gender" id="Female" value="false" /> انثي
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">اسم المستخدم</label>
                                    <div class="col-md-10">
                                        <input value="@Model.TblUserCredential.UserName"
                                               class="form-control validate[required] text-input"
                                               type="text" disabled readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">كلمة المرور: </label>
                                    <div class="col-md-10">
                                        <input placeholder="ادخل كلمة المرور" value="@Model.TblUserCredential.Password"
                                               class="form-control validate[required] text-input"
                                               type="password" name="Password" id="password1" required />
                                    </div>
                                </div>
                            </div>

                            <div class="row ls_divider last">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">اسم الجامعة</label>
                                    <div class="col-md-10 ls-group-input">
                                        <select class="form-control" id="UniversityID" name="UniversityID" onchange="getColleges()" required>
                                            <option value="0">اسم الجامعة</option>
                                            @foreach (var uni in ViewBag.UniversityList)
                                            {
                                                if (uni.ID != Model.UniversityID)
                                                {
                                                    <option value="@uni.ID">@uni.NameAr</option>
                                                }
                                                else
                                                {
                                                    <option value="@uni.ID" selected>@uni.NameAr</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <label class="col-md-2 control-label">اسم الكلية</label>
                                    <div class="col-md-10 col-md-offset-2 ls-group-input">
                                        <select class="form-control" id="CollegeID" name="CollegeID" onchange="getMajors()" required>
                                            <option value="0">اسم الكلية</option>
                                            <option value="@Model.CollegeID" selected>@Model.TblCollege.NameAr</option>
                                        </select>
                                    </div>
                                    <label class="col-md-2 control-label">التخصص</label>
                                    <div class="col-md-10 col-md-offset-2 ls-group-input">
                                        <select class="form-control input-sm" id="MajorID" name="MajorID" required>
                                            <option value="0">التخصص</option>
                                            <option value="@Model.MajorID" selected>@Model.TblMajor.NameAr</option>
                                        </select>
                                    </div>

                                    <label class="col-md-2 control-label">المحافظة</label>
                                    <div class="col-md-10 col-md-offset-2 ls-group-input">
                                        <select class="form-control input-sm" id="GovernorateID" name="GovernorateID" onchange="getAreas()" required>
                                            <option value="@Model.GovernorateID" selected>@Model.TblGovernorate.NameAr</option>
                                            <option value="0">المحافظة</option>
                                            @foreach (var gover in ViewBag.GovernorateList)
                                            {
                                                if (gover.ID != Model.GovernorateID)
                                                {
                                                    <option value="@gover.ID">@gover.NameAr</option>
                                                }
                                                else
                                                {
                                                    <option value="@gover.ID" selected>@gover.NameAr</option>
                                                }
                                            }
                                        </select>
                                    </div>

                                    <label class="col-md-2 control-label">المنطقة</label>
                                    <div class="col-md-10 col-md-offset-2 ls-group-input">
                                        <select class="form-control input-sm" id="AreaID" name="AreaID" required>
                                            <option value="0">المنطقة</option>
                                            <option value="@Model.AreaID" selected>@Model.TblArea.NameAr</option>
                                        </select>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-upload"></i> تحميل صورة طالب</h3>
                        </div>
                        <div class="panel-body">
                            <section id="ls-wrapper">
                                <!--Image Drop & Upload Wrapper Start-->
                                <div id="droparea">
                                    <div class="dropareainner">
                                        <p class="dropfiletext">انزل ملف هنا</p>
                                        <p>او</p>
                                        <!--Upload Select Button-->
                                        <p>
                                            <input id="uploadbtn" class="uploadbtn" type="button" value="اختر ملف">
                                        </p>
                                        <!--Image Effect Finish-->
                                        <p id="err">تم التحميل اي كلام وكدة يعني (:</p>
                                    </div>
                                    <!--Image Upload Input-->
                                    <input id="upload" name="StudentPic" type="file" multiple />
                                </div>
                                <!--Image Drop & Upload Wrapper Finish-->
                                <p class="message"> حجم الملف <strong>400</strong>فقط</p>
                                <!--Upoload Image Preview Wrap Start-->
                                <div id="result">
                                    <!--Upoload Image Preview Wrap Finish-->
                                </div>
                            </section>
                        </div>
                    </div>

                    <div class="panel panel-default">
                        <div class="form-group" style=" margin: 20px 30px 40px 50px; ">
                            <button class="submit btn-primary btn" type="submit" name="submit">حفظ</button>
                        </div>
                    </div>
                </div>
                <!-- Main Content Element  End-->

            </div>
        </form>
    </div>
</div>