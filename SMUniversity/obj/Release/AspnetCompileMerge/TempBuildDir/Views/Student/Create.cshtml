
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Student/Create.js"></script>

    <div id="main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <!--Top header start-->
                    <h3 class="ls-top-header">تسجيل طالب جديد</h3>
                    <!--Top header end -->
                    <!--Top breadcrumb start -->
                    <ol class="breadcrumb">
                        <li><a href="/Home/Index"><i class="fa fa-home"></i></a></li>
                        <li><a href="/Student/Index">الرئيسية</a></li>
                        <li a href="/Student/Create" class="active">تسجيل طالب جديد</li>
                    </ol>
                    <!--Top breadcrumb start -->
                </div>
            </div>
            <!-- Main Content Element  Start-->
            <form id="AddNewStudent" action="/Student/Create" method="post" class="form-horizontal ls_form" enctype='multipart/form-data'>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">تسجيل بيانات طالب</h3>
                            </div>
                            <div class="panel-body form_view">

                                <div class="row ls_divider"></div>
                                <div class="row ls_divider">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">الاسم:* </label>
                                        <div class="row">
                                            <div class="col-md-3 col-sm-12">
                                                <input type="text" name="FirstName" placeholder="الاسم الاول" class="form-control ls-group-input" required>
                                            </div>
                                            <div class="col-md-3 col-sm-12">
                                                <input type="text" name="SecondName" placeholder="الاسم الثاني" class="form-control ls-group-input" required>
                                            </div>
                                            <div class="col-md-3 col-sm-12">
                                                <input type="text" name="ThirdName" placeholder="الاسم الاخير" class="form-control ls-group-input" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row ls_divider">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">رقم الهاتف:* </label>
                                        <div class="col-md-10">
                                            <input value=""
                                                   class="validate[required,custom[phone]] form-control"
                                                   type="text" name="PhoneNumber" id="phoneNo1" required/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row ls_divider">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">الايميل:* </label>
                                        <div class="col-md-10">
                                            <input placeholder="someone@mail.com" value=""
                                                   class="validate[required,custom[email]] form-control"
                                                   type="text" name="Email" id="email1" required/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row ls_divider">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">تاريخ الميلاد </label>
                                        <div class="col-md-10">
                                            <input class="form-control datePickerOnly" type="text" name="DateOfBirth" required/>
                                            <span class="help_text">سنة/شهر/يوم</span>
                                        </div>

                                    </div>

                                </div>

                                <div class="row ls_divider">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">النوع </label>
                                        <div class="col-lg-5">
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="Gender" value="true" required data-bv-notempty-message="The gender is required"/> ذكر
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="Gender" value="false" required/> انثي
                                                </label>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="row ls_divider">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">اسم المستخدم</label>
                                        <div class="col-md-10">
                                            <input type="text"
                                                   class="form-control validate[required] text-input"
                                                   id="username1" name="UserName" placeholder="اسم المستخدم" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row ls_divider">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">كلمة المرور: </label>
                                        <div class="col-md-10">
                                            <input placeholder="ادخل كلمة المرور" value=""
                                                   class="form-control validate[required] text-input"
                                                   type="password" name="Password" id="password1" required/>
                                        </div>
                                    </div>
                                </div>


                                <div class="row ls_divider last">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">اسم الجامعة</label>
                                        <div class="col-md-10 ls-group-input">
                                            <select class="form-control" id="UniversityID" name="UniversityID" onchange="getColleges()" required>
                                                <option value="0">اسم الجامعة</option>
                                                @foreach (var uni in ViewBag.UniversityList)
                                                {
                                                    <option value="@uni.ID">@uni.NameAr</option>
                                                }
                                            </select>
                                        </div>
                                        <label class="col-md-2 control-label">اسم الكلية</label>
                                        <div class="col-md-10 col-md-offset-2 ls-group-input">
                                            <select class="form-control" id="CollegeID" name="CollegeID" onchange="getMajors()" required>
                                                <option value="0">اسم الكلية</option>
                                            </select>
                                        </div>
                                        <label class="col-md-2 control-label">التخصص</label>
                                        <div class="col-md-10 col-md-offset-2 ls-group-input">
                                            <select class="form-control input-sm" id="MajorID" name="MajorID" required>
                                                <option value="0">التخصص</option>
                                            </select>
                                        </div>

                                        <label class="col-md-2 control-label">المحافظة</label>
                                        <div class="col-md-10 col-md-offset-2 ls-group-input">
                                            <select class="form-control input-sm" id="GovernorateID" name="GovernorateID" onchange="getAreas()" required>
                                                <option value="0">المحافظة</option>
                                                @foreach (var gover in ViewBag.GovernorateList)
                                                {
                                                    <option value="@gover.ID">@gover.NameAr</option>
                                                }
                                            </select>
                                        </div>

                                        <label class="col-md-2 control-label">المنطقة</label>
                                        <div class="col-md-10 col-md-offset-2 ls-group-input">
                                            <select class="form-control input-sm" id="AreaID" name="AreaID" required>
                                                <option value="0">المنطقة</option>
                                            </select>
                                        </div>

                                        <label class="col-md-2 control-label">شحن رصيد</label>
                                        <div class="col-md-10 col-md-offset-2 ls-group-input">
                                            <select class="form-control input-sm" id="CardCategoryID" name="GovernorateID" onchange="getAreas()" required>
                                                <option value="0">فئات كروت الشحن</option>
                                                @foreach (var cardCat in ViewBag.CardCategoryList)
                                                {
                                                    <option value="@cardCat.ID">@cardCat.Title @cardCat.Price د.ك</option>
                                                }
                                            </select>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">


                    <div class="col-md-12">


                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-upload"></i> تحميل صورة طالب</h3>
                            </div>
                            <div class="panel-body">
                                <section id="ls-wrapper">
                                    <!--Image Drop & Upload Wrapper Start-->
                                    <div id="droparea">
                                        <div class="dropareainner">
                                            <p class="dropfiletext">انزل ملف هنا</p>
                                            <p>او</p>
                                            <!--Upload Select Button-->
                                            <p>
                                                <input id="uploadbtn" class="uploadbtn" type="button" value="اختر ملف">
                                            </p>


                                            <!--Image Effect Finish-->
                                            <p id="err">تم التحميل اي كلام وكدة يعني (:</p>
                                        </div>
                                        <!--Image Upload Input-->
                                        <input id="upload" name="StudentPic" type="file" multiple />
                                    </div>
                                    <!--Image Drop & Upload Wrapper Finish-->
                                    <p class="message"> حجم الملف <strong>400</strong>فقط</p>
                                    <!--Upoload Image Preview Wrap Start-->
                                    <div id="result">
                                        <!--Upoload Image Preview Wrap Finish-->
                                    </div>
                                </section>
                            </div>
                        </div>


                        
                        <div class="panel panel-default">
                            @*<div class="panel-heading">
                                <h3 class="panel-title">معلومات اخري</h3>
                                <ul class="panel-control">
                                    <li><a class="minus" href="javascript:void(0)"><i class="fa fa-minus"></i></a></li>
                                    <li><a class="refresh" href="javascript:void(0)"><i class="fa fa-refresh"></i></a></li>
                                    <li><a class="close-panel" href="javascript:void(0)"><i class="fa fa-times"></i></a></li>
                                </ul>
                            </div>
                            <div class="panel-body no-padding">
                                <div class="summernote">
                                    معلومات خاصة بالطالب ان وجد
                                </div>
                            </div>*@
                            <div class="form-group" style=" margin: 20px 30px 40px 50px; ">
                                <button class="submit btn-primary btn" type="submit" name="submit">حفظ</button>
                            </div>

                        </div>
                        


                    </div>
                    <!-- Main Content Element  End-->

                </div>
            </form>
        </div>
    </div>


