
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Top header start-->
                <h3 class="ls-top-header">اضافة محاضر</h3>
                <!--Top header end -->
                <!--Top breadcrumb start -->
                <ol class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a></li>
                    <li><a href="/Lecturer/Index">الرئيسية</a></li>
                    <li class="active"><a href="/Lecturer/Create">اضافة محاضر</a></li>
                </ol>
                <!--Top breadcrumb start -->
            </div>
        </div>
        <!-- Main Content Element  Start-->

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">اضافة محاضر</h3>
                    </div>
                    <form id="AddNewLecturer" action="/Lecturer/Create" method="post" class="form-horizontal ls_form" enctype='multipart/form-data'>
                        <div class="panel-body form_view">
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">الاسم عربي:* </label>
                                    <div class="row">
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="FirstNameAr" placeholder="الاسم الاول" class="form-control ls-group-input" required>
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="SecondNameAr" placeholder="الاسم الثاني" class="form-control ls-group-input" required>
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="ThirdNameAr" placeholder="الاسم الاخير" class="form-control ls-group-input" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">الاسم انجليزي:* </label>
                                    <div class="row">
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="FirstNameEn" placeholder="الاسم الاول" class="form-control ls-group-input" required>
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="SecondNameEn" placeholder="الاسم الثاني" class="form-control ls-group-input" required>
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <input type="text" name="ThirdNameEn" placeholder="الاسم الاخير" class="form-control ls-group-input" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">اسم المستخدم</label>
                                    <div class="col-md-10">
                                        <input type="text"
                                               class="form-control validate[required] text-input"
                                               id="username1" name="UserName" placeholder="اسم المستخدم" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">كلمة المرور: </label>
                                    <div class="col-md-10">
                                        <input placeholder="ادخل كلمة المرور" value=""
                                               class="form-control validate[required] text-input"
                                               type="password" name="Password" id="password1" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">رقم التليفون</label>
                                    <div class="col-md-10">
                                        <input type="tel"
                                               class="form-control validate[required] text-input"
                                               id="PhoneNumber" name="PhoneNumber" placeholder="رقم التليفون" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">البريد الإلكتروني</label>
                                    <div class="col-md-10">
                                        <input type="email"
                                               class="form-control validate[required] text-input"
                                               id="Email" name="Email" placeholder="البريد الإلكتروني" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">العنوان</label>
                                    <div class="col-md-10">
                                        <input type="text"
                                               class="form-control validate[required] text-input"
                                               id="Address" name="Address" placeholder="العنوان" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row ls_divider">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">النوع </label>
                                    <div class="col-lg-5">
                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="Gender" value="true" checked="checked"/> ذكر
                                            </label>
                                        </div>
                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="Gender" value="false" /> انثي
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label class="col-md-2 control-label">طريقة الحساب</label>
                                <div class="col-md-10">
                                    <div class="row">
                                        <div class="col-md-3 col-sm-4 col-xs-6">
                                            <div class="icheck-list">
                                                <label class="radio">
                                                    <input class="icheck-red icheck" type="checkbox" name="LecturerAccountMethod"
                                                           id="radioRedCheckbox1" value="1" data-checkbox="icheckbox_square-grey" checked="checked" disabled> حساب المحاضر بسعر الساعه
                                                    <input placeholder="ادخل سعر الساعه"
                                                           class="form-control validate[required] text-input"
                                                           type="number" name="HourCost" id="HourCost" />
                                                </label>
                                            </div>
                                            @*<label class="radio">
                                                <input class="icheck-red" type="radio" name="LecturerAccountMethod"
                                                       id="radioRedCheckbox1" value="1" checked="checked"> حساب المحاضر بسعر الساعه
                                                <input placeholder="ادخل سعر الساعه"
                                                       class="form-control validate[required] text-input"
                                                       type="number" name="HourCost" id="HourCost" />
                                            </label>*@

                                        </div>
                                        <div class="col-md-3 col-sm-4 col-xs-6">

                                            <label class="radio">
                                                <input class="icheck-blue icheck" type="checkbox" name="LecturerAccountMethod"
                                                       id="radioRedCheckbox2" data-checkbox="icheckbox_square-grey" value="2" checked="checked" disabled> حساب المحاضر بالنسبة %
                                                <input placeholder="ادخل النسبه"
                                                       class="form-control validate[required] text-input"
                                                       type="number" name="LectPercentage" id="LectPercentage" />
                                            </label>

                                        </div>
                                        <div class="col-md-3 col-sm-4 col-xs-6">

                                            <label class="radio">
                                                <input class="icheck-aero icheck" type="checkbox" name="LecturerAccountMethod"
                                                       id="radioRedCheckbox3" data-checkbox="icheckbox_square-grey" value="3" checked="checked" disabled> حسب المحاضر بسعر الكورس
                                                <input placeholder="ادخل سعر الكورس"
                                                       class="form-control validate[required] text-input"
                                                       type="number" name="CoursePrice" id="CoursePrice" />
                                            </label>
                                        </div>
                                        <div class="col-md-3 col-sm-4 col-xs-6">
                                            <label class="radio">
                                                <input class="icheck-aero icheck" type="checkbox" name="LecturerAccountMethod"
                                                       id="radioRedCheckbox3" data-checkbox="icheckbox_square-grey" value="4" checked="checked" disabled> نسبة طلاب المحاضر
                                                <input placeholder="ادخل النسبه الطلاب"
                                                       class="form-control validate[required] text-input"
                                                       type="number" name="StudentPercentage" id="StudentPercentage" />
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title"><i class="fa fa-upload"></i> تحميل صورة المحاضر</h3>
                                </div>
                                <div class="panel-body">
                                    <section id="ls-wrapper">
                                        <!--Image Drop & Upload Wrapper Start-->
                                        <div id="droparea">
                                            <div class="dropareainner">
                                                <p class="dropfiletext">انزل ملف هنا</p>
                                                <p>او</p>
                                                <!--Upload Select Button-->
                                                <p>
                                                    <input id="uploadbtn" class="uploadbtn" type="button" value="اختر ملف">
                                                </p>


                                                <!--Image Effect Finish-->
                                                <p id="err">تم التحميل اي كلام وكدة يعني (:</p>
                                            </div>
                                            <!--Image Upload Input-->
                                            <input id="upload" name="ProfilePic" type="file" multiple />
                                        </div>
                                        <!--Image Drop & Upload Wrapper Finish-->
                                        <p class="message"> حجم الملف <strong>400</strong>فقط</p>
                                        <!--Upoload Image Preview Wrap Start-->
                                        <div id="result">
                                            <!--Upoload Image Preview Wrap Finish-->
                                        </div>
                                    </section>
                                </div>
                            </div>

                            <div class="form-group" style=" margin: 20px 30px 40px 50px; ">
                                <button class="submit btn-primary btn" type="submit" name="submit">حفظ</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
