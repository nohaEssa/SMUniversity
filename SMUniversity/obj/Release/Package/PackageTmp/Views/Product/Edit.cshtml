@model SMUModels.TblProduct
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Top header start-->
                <h3 class="ls-top-header">تعديل منتج</h3>
                <!--Top header end -->
                <!--Top breadcrumb start -->
                <ol class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a></li>
                    <li><a href="/Product/Index">الرئيسية</a></li>
                    <li class="active"><a href="/Product/Edit">تعديل منتج</a></li>
                </ol>
                <!--Top breadcrumb start -->
            </div>
        </div>
        <!-- Main Content Element  Start-->

        <form id="EditProduct" action="/Product/Edit" method="post" class="form-horizontal ls_form" enctype='multipart/form-data'>
            <input type="hidden" name="ProductID" value="@Model.ID" />

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">برجاء تعبئة البيانات</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <form id="formid2" class="formular form-horizontal ls_form" method="post" action="">
                                        <div id="wizard" class="swMain">
                                            <ul>
                                                <li>
                                                    <a href="#step-Login">
                                                        <span class="stepNumber">1</span>
                                                        <span class="stepDesc">
                                                            الخطوة 1<br />
                                                            <small>معلومات الحصة</small>
                                                        </span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#step-user">
                                                        <span class="stepNumber">2</span>
                                                        <span class="stepDesc">
                                                            الخطوة 2<br />
                                                            <small>معلومات الجامعة</small>
                                                        </span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#step-bio">
                                                        <span class="stepNumber">3</span>
                                                        <span class="stepDesc">
                                                            الخطوة 3<br />
                                                            <small>حساب المعلم</small>
                                                        </span>
                                                    </a>
                                                </li>
                                            </ul>
                                            <div id="step-Login">
                                                <h2 class="StepTitle">معلومات الحصة</h2>

                                                <div class="container-fluid">
                                                    <div class="row">
                                                        <label class="col-md-2 control-label"> اختر الفئة</label>
                                                        <div class="col-md-10 ls-group-input">
                                                            <select class="form-control" id="ProductCategoryID" name="ProductCategoryID" required>
                                                                <option value="0">اختر الفئة</option>
                                                                @foreach (var item in ViewBag.ProductCatList)
                                                                {
                                                                    if (item.ID != Model.ProductCategoryID)
                                                                    {
                                                                        <option value="@item.ID">@item.NameAr</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="@item.ID" selected>@item.NameAr</option>
                                                                    }
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group">
                                                            <label class="col-md-2 control-label">اسم المنتج عربي</label>
                                                            <div class="col-md-10">
                                                                <input type="text"
                                                                       class="form-control validate[required] text-input"
                                                                       id="NameAr" name="NameAr" placeholder="اسم المنتج عربي" value="@Model.NameAr" required>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group">
                                                            <label class="col-md-2 control-label">اسم المنتج انجليزي</label>
                                                            <div class="col-md-10">
                                                                <input type="text"
                                                                       class="form-control validate[required] text-input"
                                                                       id="NameEn" name="NameEn" placeholder="اسم المنتج انجليزي" value="@Model.NameEn" required>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group">
                                                            <label class="col-md-2 control-label">تفاصيل المنتج عربي</label>
                                                            <div class="col-md-10">
                                                                <textarea class="animatedTextArea form-control"
                                                                          id="DescriptionAr" name="DescriptionAr"
                                                                          placeholder="اكتب تفاصيل المنتج عربي" value="@Model.DescriptionAr"></textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group">
                                                            <label class="col-md-2 control-label">تفاصيل المنتج انجليزي</label>
                                                            <div class="col-md-10">
                                                                <textarea class="animatedTextArea form-control"
                                                                          id="DescriptionEn" name="DescriptionEn"
                                                                          placeholder="اكتب تفاصيل المنتج انجليزي" value="@Model.DescriptionEn"></textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row CourseCost">
                                                        <div class="form-group">
                                                            <label class="col-md-2 control-label">سعر المنتج</label>
                                                            <div class="col-md-10">
                                                                <input type="number"
                                                                       class="form-control validate[required] text-input"
                                                                       id="Cost" name="Cost" placeholder="ادخل سعر المنتج" value="@Model.Cost" required>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="panel panel-default">
                                                        <div class="panel-heading">
                                                            <h3 class="panel-title"><i class="fa fa-upload"></i> تحميل صورة منتج</h3>
                                                        </div>
                                                        <div class="panel-body">
                                                            <section id="ls-wrapper">
                                                                <!--Image Drop & Upload Wrapper Start-->
                                                                <div id="droparea">
                                                                    <div class="dropareainner">
                                                                        <p class="dropfiletext">انزل ملف هنا</p>
                                                                        <p>او</p>
                                                                        <!--Upload Select Button-->
                                                                        <p>
                                                                            <input id="uploadbtn" class="uploadbtn" type="button" value="اختر ملف">
                                                                        </p>


                                                                        <!--Image Effect Finish-->
                                                                        <p id="err">تم التحميل اي كلام وكدة يعني (:</p>
                                                                    </div>
                                                                    <!--Image Upload Input-->
                                                                    <input id="upload" name="Picture" type="file" multiple />
                                                                </div>
                                                                <!--Image Drop & Upload Wrapper Finish-->
                                                                <p class="message"> حجم الملف <strong>400</strong>فقط</p>
                                                                <!--Upoload Image Preview Wrap Start-->
                                                                <div id="result">
                                                                    <!--Upoload Image Preview Wrap Finish-->
                                                                </div>
                                                            </section>
                                                        </div>
                                                    </div>

                                                    @*<div class="form-group">
                                                    <label class="col-md-2 control-label"> صورة الحصة</label>

                                                    <div class="col-md-10 ls-group-input">
                                                        <input id="file-3" type="file" multiple="true">
                                                    </div>
                                                </div>*@
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin: 20px 30px 40px 50px; ">
                                                <button class="submit btn-primary btn" type="submit" name="submit">حفظ</button>
                                            </div>
                                        </div>
                                        <!-- End SmartWizard Content -->
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

