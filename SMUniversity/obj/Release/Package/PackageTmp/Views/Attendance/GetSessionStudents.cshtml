@model List<SMUModels.TblSubscription>
@{
    ViewBag.Title = "GetSessionStudents";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SMUModels.admin_SMUniversityEntities _Context = new SMUModels.admin_SMUniversityEntities();
    int SessionTimesID = ViewBag.SessionTimesID;
}

<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/buttons.dataTables.min.css" rel="stylesheet" />

<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<script src="https://editor.datatables.net/extensions/Editor/js/dataTables.editor.min.js"></script>
@*<script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
<script src="~/Scripts/DataTables/but@*t*@ons.html5.min.js"></script>

<script src="~/Scripts/Session/ViewSessions.js"></script>

<input type="hidden" id="SessionTimeID" />
<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Top header start-->
                <h3 class="ls-top-header"></h3>
                <!--Top header end -->
                <!--Top breadcrumb start -->
                <ol class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a></li>
                    <li class="active"><a href="/BalanceTransaction/PendedChargeRequest">الرئيسية</a></li>
                    @*<li class="active"><a href="/BalanceTransaction/PendedChargeRequest">اضافة تخصص</a></li>*@
                </ol>
                <!--Top breadcrumb start -->
            </div>
        </div>
        <!-- Main Content Element  Start-->

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"></h3>
                    </div>
                    <br />
                    <form id="SaveAttendance" action="/Attendance/SaveAttendance" method="post" class="form-horizontal ls_form" enctype='multipart/form-data'>
                        <input type="hidden" name="SessionID" value="@ViewBag.SessionID" />
                        <input type="hidden" name="SessionTimesID" value="@ViewBag.SessionTimesID" />
                        @*<table id="myDataTable" class="table table-striped table-bordered table-hover display">*@
                        <table id="myDataTable" class="table table-striped table-bordered table-hover display">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>اسم الطالب</th>
                                    <th>رقم التليفون</th>
                                    <th>حضور</th>
                                    <th>غياب</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var _Attendance = _Context.TblAttendances.Where(a => a.StudentID == item.StudentID && a.SubscriptionID == item.ID && a.SessionTimesID == SessionTimesID).FirstOrDefault();
                                    <tr>
                                        <td>
                                            @item.ID
                                            <input type="hidden" name="SubscriptionIDs" value="@item.ID" />
                                        </td>
                                        <td>@item.TblStudent.FirstName @item.TblStudent.SecondName @item.TblStudent.ThirdName</td>
                                        <td>@item.TblStudent.PhoneNumber</td>
                                        <td>
                                            @if (_Attendance.Attend == 1)
                                            {
                                                <input type="radio" name="Attend_@item.ID" value="1" checked="checked" required />
                                            }
                                            else
                                            {
                                                <input type="radio" name="Attend_@item.ID" value="1" required />
                                            }
                                        </td>
                                        <td>
                                            @if (_Attendance.Attend == 2)
                                            {
                                                <input type="radio" name="Attend_@item.ID" value="2" checked="checked" required />
                                            }
                                            else
                                            {
                                                <input type="radio" name="Attend_@item.ID" value="1" required />
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="form-group" style=" margin: 20px 30px 40px 50px; ">
                            <button class="submit btn-primary btn" type="submit" name="submit">حفظ</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
